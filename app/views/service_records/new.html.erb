<div class="container">
	<h1>Add a new service record</h1>
	<p>For vehicle: <%= @car.year %> <%= @car.make %> <%= @car.model %></p>
	<%= form_for(@service_record) do |f| %>
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description, class: 'form-control' %>
		</div>
		<%= f.hidden_field :occured, :value => Time.zone.now %>
		<%= f.hidden_field :car_id, :value => @car.id %>
		<%= f.submit "Submit service record", class: 'btn btn-primary' %>
	<% end %>
</div>