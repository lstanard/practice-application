<div class="container">
	<h1>Edit a service record</h1>
	<%= form_for(@service_record) do |f| %>
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description, class: 'form-control' %>
		</div>
		<%= f.submit "Save", class: 'btn btn-primary' %>
	<% end %>
</div>